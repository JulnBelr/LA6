#include <LiquidCrystal.h>

const int Trig = 8;
const int Echo = 9;
const int rs = 12, en = 11, d4 = 5, d5 = 4, d6 = 3, d7 = 2;
LiquidCrystal lcd(rs, en, d4, d5, d6, d7);

float distance , duration;
void setup() {
  // put your setup code here, to run once:
Serial.begin(9600);
pinMode(Trig, OUTPUT);
pinMode(Echo, INPUT);
lcd.begin(16, 2);
}

void loop() {
  // put your main code here, to run repeatedly:
digitalWrite(Trig, 0);
delayMicroseconds(2);
digitalWrite(Trig, 1);
delayMicroseconds(10);
digitalWrite(Trig, 0);

 duration = pulseIn(Echo, 1);

 distance = (duration / 2) * 0.0343;

if (distance >= 400 || distance <= 2)
{
lcd.clear();
lcd.setCursor(0, 0);
lcd.print ("Out of range");
}

else {
  lcd.clear();
lcd.setCursor(0, 0);
lcd.print("Distance = ");
lcd.setCursor(0, 2);
lcd.print(distance);
lcd.print("cm");
lcd.print("       "); 
delay(100);
}
delay (500);
}
